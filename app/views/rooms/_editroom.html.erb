<section class="vh-100" style="background-color: #eee;" >
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1" >
              <%= form_with(model: room) do |form| %>
                <% if room.errors.any? %>
                  <div style="color: red">
                    <h2><%= pluralize(room.errors.count, "error") %> </h2>

                    <ul>
                      <% room.errors.each do |error| %>
                        <li><%= error.message %></li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>
                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Хочешь изменить комнату?</p>
                <form class="mx-1 mx-md-4">
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <%= form.label :room_name, style: "display: block", class: "form-label"  %>
                         <%= form.text_field :room_name, class: "form-control"%>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                    <%= form.label :password_digest, style: "display: block", class: "form-label"  %>
                    <%= form.text_field :password , class: "form-control"%>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <%= form.label :lbl, value: 'Подтвердите пароль', style: "display: block", class: "form-label" %>
                       <%= form.password_field :password_confirmation, class: "form-control" %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <%= form.label :count_of_users, style: "display: block", class: "form-label" %>
                        <%= form.text_field :count_of_users,  class: "form-control"%>
                    </div>
                  </div>


                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                      <%= form.submit "внести изменения", class: "btn btn-primary btn-lg align-items-center"%>  
                  </div>
                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <%= link_to "Вернуться в комнату", showroom_path(:id => @room.id) %>
                </div>
                </form>

              </div>
          <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="https://i.artfile.ru/3549x3100_1283670_[www.ArtFile.ru].jpg"
                      class="img-fluid" alt="Sample image"> 

              </div>  
<% end %>


            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<%= form_with(model: room) do |form| %>
  <% if room.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(room.errors.count, "error") %> </h2>

      <ul>
        <% room.errors.each do |error| %>
          <li><%= error.message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :room_number, style: "display: block" %>
    <%= form.text_field :room_number %>
  </div>

  <div>
    <%= form.label :password_digest, style: "display: block" %>
    <%= form.text_field :password %>
  </div>

    <div>
    <%= form.label :user_wish, style: "display: block" %>
    <%= form.text_field :user_wish %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

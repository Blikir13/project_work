<section class="vh-100" style="background-color: #eee;" >
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1" >
                  <div style="color: red">
                    <ul>
                      <% if @newroom %>
                        <% if @newroom.errors.any? %>
                          <% @newroom.errors.each do |error| %>
                            <li><%= error.message %></li>
                          <%end%>
                         <%end%> 
                      <% end %>
                    </ul>
                  </div>
              <%unless flash[:notice].blank?%>
                <h2 style = 'color:red'><%=flash[:notice]%></h2>
              <%end%>
              <%= form_with url: rooms_roomjoin_url, method: :post,  local:true do |form| %>
                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4"> <%= t('.title') %> </p>
                <form class="mx-1 mx-md-4">

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <%= form.label t('.room_name'), style: "display: block", class: "form-label"  %>
                         <%= form.text_field :room_name, class: "form-control"%>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                    <%= form.label t('.password'), style: "display: block", class: "form-label"  %>
                    <%= form.text_field :password , class: "form-control"%>
                    </div>
                  </div>


                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <%= form.label t('.real_username'), style: "display: block", class: "form-label" %>
                        <%= form.text_field :real_username,  class: "form-control"%>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <%= form.label t('.wish'), style: "display: block", class: "form-label" %>
                        <%= form.text_field :wish,  class: "form-control"%>
                    </div>
                  </div>

                  <div class="form-check d-flex justify-content-center mb-5">
                    <label class="form-check-label" for="form2Example3">
                      <%= t('.know') %>  <%= link_to t('.click'), :rules %> 
                    </label>
                  </div>

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                      <%= form.submit t('.join'), class: "btn btn-primary btn-lg align-items-center", id:"btn_join" %>  
                  </div>
                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <%= link_to t('.to_main'), main_path %>
                </div>
                </form>

              </div>
          <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="https://i.artfile.ru/5616x3744_1540035_[www.ArtFile.ru].jpg"
                      class="img-fluid" alt="Sample image"> 

              </div>  


            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<% end %>
